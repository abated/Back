<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="estilos.css">
    <title>Mensajes</title>
</head>

<body>
    <h1>Mensajes</h1>

    {{#if mensajes}}
    <ul class="midlaner">
        {{#each mensajes}}
        {{!-- <li class="toplaner">{{nombre}}</li>
        <li class={{toplaner}}>{{precio}} </li>
        <li>{{hora}}</li> --}}
        <li>
            <span class="nombre">
                {{author.id}}
            </span>
            <span class="hora">
                [{{hora}}]:

            </span>
            <span class="mensaje">
                {{comments}}
            </span>
        </li>
        {{/each}}
    </ul>
    {{/if}}

    {{> footer }}
</body>

</html>